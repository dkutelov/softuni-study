<div class="spacer">
    <h2>{{title}}
        <div class="controls">
            {{#if isAuthenticated}}
                <a href="/articles/{{_id}}/edit/">[edit]</a>
            {{/if}}
            {{#if isAuthor}}
                <a href="/articles/{{_id}}/delete">[delete]</a>
            {{/if}}
        </div>
    </h2>
    <article>
        {{#each description}}
            <p>{{this}}</p>
        {{/each}}
    </article>
</div>